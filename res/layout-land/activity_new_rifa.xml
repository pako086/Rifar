<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:ignore="Deprecated" >

    <AbsoluteLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/backgroundland" >

        <ImageButton
            android:id="@+id/btnAdd_rifa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_x="0dp"
            android:layout_y="352dp"
            android:background="@color/negro"
            android:contentDescription="@string/src_add_rifa"
            android:paddingLeft="@dimen/weight_barBottom_land2"
            android:paddingRight="@dimen/weight_barBottom_land2"
            android:src="@android:drawable/ic_menu_add" />

        <ImageButton
            android:id="@+id/btnCancelar_rifa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_x="240dp"
            android:layout_y="352dp"
            android:background="@color/negro"
            android:contentDescription="@string/src_cancelar"
            android:paddingLeft="@dimen/weight_barBottom_land2"
            android:paddingRight="@dimen/weight_barBottom_land2"
            android:src="@android:drawable/ic_menu_close_clear_cancel" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_x="8dp"
            android:layout_y="8dp"
            android:text="@string/txt_nombre_rifa"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/blanco" />

        <EditText
            android:id="@+id/editText1"
            android:layout_width="249dp"
            android:layout_height="wrap_content"
            android:layout_x="10dp"
            android:layout_y="36dp"
            android:background="@color/negro"
            android:ems="10"
            android:inputType="text"
            android:paddingBottom="@dimen/Height_editText"
            android:text="@string/txtField_nombre_rifa"
            android:textColor="@color/azul_claro" >

            <requestFocus />
        </EditText>

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_x="10dp"
            android:layout_y="80dp"
            android:text="@string/inf_fecha"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/blanco" />

        <Button
            android:id="@+id/button1"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_x="142dp"
            android:layout_y="76dp"
            android:text="@string/definir_fecha" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_x="10dp"
            android:layout_y="117dp"
            android:text="@string/txt_tipo_rifa"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/blanco" />

        <RadioGroup
            android:id="@+id/radioGroup2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_x="6dp"
            android:layout_y="143dp" >

            <RadioButton
                android:id="@+id/radio0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                android:text="@string/tipo_1"
                android:textColor="@color/blanco" />

            <RadioButton
                android:id="@+id/radio1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tipo_2"
                android:textColor="@color/blanco" />
        </RadioGroup>

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="43dp"
            android:layout_x="14dp"
            android:layout_y="226dp"
            android:text="@string/txt_imagen_rifa"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/blanco" />

        <RadioGroup
            android:id="@+id/radioGroup1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="43dp"
            android:layout_x="10dp"
            android:layout_y="254dp" >

            <RadioButton
                android:id="@+id/buscar_foto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="false"
                android:text="@string/btn_buscar_foto"
                android:textColor="@color/blanco" />

            <RadioButton
                android:id="@+id/tomar_foto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/btn_tomar_foto"
                android:textColor="@color/blanco" />
        </RadioGroup>

    </AbsoluteLayout>

</ScrollView>